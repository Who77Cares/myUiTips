<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/containerFragment">

    <fragment
        android:id="@+id/containerFragment"
        android:name="com.example.materialviewsdemo.ContainerFragment"
        android:label="ContainerFragment" >
        <action
            android:id="@+id/action_containerFragment_to_caruselFragment"
            app:destination="@id/caruselFragment" />
        <action
            android:id="@+id/action_containerFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
        <action
            android:id="@+id/action_containerFragment_to_sliderFragment"
            app:destination="@id/sliderFragment" />
        <action
            android:id="@+id/action_containerFragment_to_iconSliderFragment"
            app:destination="@id/iconSliderFragment" />
        <action
            android:id="@+id/action_containerFragment_to_animFragment"
            app:destination="@id/animFragment"

            app:popExitAnim="@anim/slide_in_right"

            />
    </fragment>

    <fragment
        android:id="@+id/caruselFragment"
        android:name="com.example.materialviewsdemo.carusel.CaruselFragment"
        android:label="CaruselFragment" />
    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.example.materialviewsdemo.cards.CardsFragment"
        android:label="CardsFragment" />
    <fragment
        android:id="@+id/sliderFragment"
        android:name="com.example.materialviewsdemo.slider.SliderFragment"
        android:label="SliderFragment" />
    <fragment
        android:id="@+id/iconSliderFragment"
        android:name="com.example.materialviewsdemo.slider.IconSliderFragment"
        android:label="IconSliderFragment" />
    <fragment
        android:id="@+id/animFragment"
        android:name="com.example.materialviewsdemo.anim.AnimFragment"
        android:label="AnimFragment" />
</navigation>